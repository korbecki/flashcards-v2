<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="202305082020-0" author="korbecki">
        <createTable tableName="users" remarks="Used to store user information">
            <column name="user_id" type="BIGSERIAL" autoIncrement="true" remarks="The unique id to identify the user">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)" remarks="The first name of the user">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="VARCHAR(50)" remarks="The last name of the user">
                <constraints nullable="false"/>
            </column>
            <column name="user_name" type="VARCHAR(50)" remarks="User nickname">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(100)"
                    remarks="The password hash generated by the appropriate algorithm">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(50)"
                    remarks="The email of the user. Used for login and registration purposes">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>